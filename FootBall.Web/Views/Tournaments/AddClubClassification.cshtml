@model FootBall.Web.Models.ClassificationViewModel

@{
    ViewData["Title"] = "Add Club";
}

<h2>Add</h2>

<h4>Team to tournament: @Model.Tournament.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClubClassification" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TournamentId" />

            <partial name="_Classification" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.TournamentId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
